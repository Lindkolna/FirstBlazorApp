@page "/converter"

<h3>Converter</h3>

<label>Kg</label>
<input type="number" @bind-value="@Kilos" @bind-value:event="oninput" /> @*two way binding by using @bind and property(with Uppercase)*@
<span>=</span>
<input type="number" @bind-value="@Grams" @bind-value:event="oninput" /> @*one way binding by using @value(@grams)*@
<label>g</label>

@code {
    private double kilos = 1;
    private double grams = 1000;

    public double Kilos
    {
        get => kilos;
        set
        {
            grams = value * 1000;
            kilos = value;
        }
    }
    public double Grams
    {
        get => grams;
        set
        {
            kilos = value / 1000;
            grams = value;
        }
    }

}
